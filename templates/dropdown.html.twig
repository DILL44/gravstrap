<div class="{% if dropdown.dropup|default(false) %}dropup{% else %}dropdown{% endif %}">
  <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    {{ dropdown.label }}
    <span class="caret"></span>
  </button>
  {% include "partials/_dropdown_items.html.twig" with {'items': dropdown.items } %}
</div>