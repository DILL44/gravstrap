<nav class="navbar navbar-default{% if fixed|default('none') != 'none' %} navbar-fixed-{{ fixed }}{% endif %}{% if centering == 'centered' %} container{% elseif centering == 'fluid' %} container-fluid{% endif %}{% if inverted|default(false) %} navbar-inverse{% endif %} {{ attributes['class'] }}">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#{{ navbar.id }}" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">{% if brand_image is defined %} {{ page.media[brand_image].resize(20, 20) }} {% else %} {{ brand_text }} {% endif %}</a>
    </div>

    <div id="{{ id }}" class="collapse navbar-collapse">
        {% for item in items %}
            {{ item }}
        {% endfor %}
    </div>
  </div>
</nav>
